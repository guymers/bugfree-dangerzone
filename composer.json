{
    "name": "vektah/bugfree-dangerzone",
    "type": "type-verifier",
    "description": "Type verification for php source. Ensures uses and all types within a file verify against the projects auto loader.",
    "keywords": ["ci", "type", "typehint", "testing"],
    "homepage": "https://github.com/Vektah/bugfree-dangerzone",
    "licence": "http://opensource.org/licenses/BSD-2-Clause",
    "authors": [
        {
            "name": "Adam Scarr",
            "email": "adam@vektah.net",
            "role": "Developer"
        }
    ],

    "require": {
        "php": ">=5.4",
        "ext-json": "*",
        "nikic/php-parser": "0.9.3",
        "symfony/console": "2.3.1",
        "doctrine/annotations": "1.1.2"
    },

    "require-dev": {
        "phake/phake": "v2.0.0-alpha2",
        "phpunit/phpunit": "3.7.21",
        "squizlabs/php_codesniffer": "1.4.6"
    },

    "bin": [
        "bin/bugfree"
    ],

    "autoload": {
        "psr-0": {"bugfree\\": "src/main/php"}
    }
}
