<phpunit backupGlobals="true"
         backupStaticAttributes="false"
         bootstrap="src/test/resources/bootstrap.php"
         cacheTokens="false"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         forceCoversAnnotation="false"
         mapTestClassNameToCoveredClassName="false"
         stopOnError="false"
         stopOnFailure="false"
         stopOnIncomplete="false"
         stopOnSkipped="false"
         verbose="false">

    <testsuites>
      <testsuite name="Unit Tests">
        <directory>src/test/php</directory>
      </testsuite>
    </testsuites>

    <!-- Setting this filter speeds up coverage by quite a bit. Seems phpunit tries to generate coverage for vendor... -->
    <filter>
      <whitelist processUncoveredFilesFromWhitelist="true">
        <directory suffix=".php">src/main/php</directory>
      </whitelist>
    </filter>
</phpunit>
